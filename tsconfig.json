{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
	"rootDir": "./src",
	"strict": true,
    "strictPropertyInitialization": false,
	"moduleResolution": "node",
	"allowSyntheticDefaultImports": true,
	"esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
